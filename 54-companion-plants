public Boolean companionPlants(String plant1, String plant2) {
    if((plant1 == 'lettuce' && ((plant2 == 'cucumbers') || (plant2 == 'onions'))) ||
       (plant1 == 'onions' && ((plant2 == 'carrots') || (plant2 == 'lettuce') ||(plant2 == 'tomatoes'))) ||
       (plant1 == 'cucumbers' && plant2 == 'lettuce')){
        return true;
    }
    return false;
}