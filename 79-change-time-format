public String changeTimeFormat(String strTime) {
    String strHour = strTime.substringBefore(':');
    String strMins = strTime.substringAfter(':');
    Integer intHour = integer.valueOf(strHour);
    String strTimeFormat, strHourNew;
    Integer intHourNew;
    if(intHour >= 0 && intHour < 12){
        strTimeFormat = 'AM';
        strHourNew = strHour;
    }
    else if (intHour > 12 && intHour != 0){
        strTimeFormat = 'PM';
        intHourNew = intHour - 12;
        strHourNew = string.valueOf(intHourNew);
    }
    else{
        strTimeFormat = 'PM'
        strHourNew = strHour;
    }
    return strHourNew + ':' strMins + ' ' + strTimeFormat; 