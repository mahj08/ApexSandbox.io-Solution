public String changeTimeFormat(String strTime) {
    String strHour = strTime.substringBefore(':');
    String strMins = strTime.substringAfter(':');
    Integer intHour = Integer.ValueOf(strHour);
    String strTimeFormat, strHourNew, strTimeFormatted;
    Integer intHourNew;
    
    strTimeFormatted = strHourNew + ':' strMins + ' ' + strTimeFormat; 
    return strTimeFormatted;
}