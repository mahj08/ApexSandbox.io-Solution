public String changeTimeFormat(String strTime) {
    public String strHour = strTime.substringBefore(':');
    public String strMins = strTime.substringAfter(':');
    public Integer intHour = Integer.ValueOf(strHour);
    public String strTimeFormat, strHourNew;
    public Integer intHourNew;
    if(intHour >= 0 && intHour < 12){
        strTimeFormat = 'AM';
        strHourNew = strHour;
    }
    else if (intHour > 12 && intHour != 0){
        strTimeFormat = 'PM';
        intHourNew = intHour - 12;
        strHourNew = String.ValueOf(intHourNew);
    }
    else{
        strTimeFormat = 'PM'
        strHourNew = strHour;
    }
    return strHourNew + ':' strMins + ' ' + strTimeFormat; 
}